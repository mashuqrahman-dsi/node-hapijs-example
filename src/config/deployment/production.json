{
  "server": {
    "port": 8080,
    "authTokenExpirationTime": "30m"
  },
  "logger": {
    "types": ["rotate-file", "loggly"],
    "level": "info"
  },
  "documentation": {
    "info": {
      "title": "Api Documentation"
    },
    "swaggerUI": false,
    "documentationPage": true,
    "connectionLabel": "backend-api",
    "grouping": "tags"
  },
  "db": {
    "uri": "mongodb://localhost/somitydb",
    "options": {
      "useMongoClient": true,
      "poolSize": 10,
      "bufferMaxEntries": 0
    }
  }
}